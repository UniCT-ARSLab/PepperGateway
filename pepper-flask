FROM python:2.7
WORKDIR /app
COPY . .

RUN pip install --upgrade pip
RUN pip install Flask
RUN pip install flask_sqlalchemy

WORKDIR /app/gateway/

CMD [ "python", "-m" , "flask", "run", "--host=0.0.0.0"]
# CMD ["python", "app.py"]

